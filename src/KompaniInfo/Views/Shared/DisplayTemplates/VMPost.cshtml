@using KompaniInfo.ViewModels
@model VMPost


<div class="post" style="margin-bottom: 60px;">
	<h2 style="font-size: 40px;margin-bottom:5px;">@Html.RouteLink(Model.Rubrik, "poster", new { Id = Model.Id })</h2>
	<p style="color: #999;">@Model.Datum.ToString("MMMM d, yyyy")</p>
	@Html.Raw(Model.Innehall.Markdown())
	<hr/>
</div>
